generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model InvoiceRequest {
  id                 String   @id @default(cuid())
  takerCnpj          String
  serviceCity        String
  serviceState       String
  serviceValue       Float
  desiredIssueDate   DateTime
  serviceDescription String
  status             InvoiceStatus @default(PENDENTE_EMISSAO)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Campos para quando a nota Ã© emitida
  invoiceNumber      String?
  invoiceIssueDate   DateTime?

  @@map("invoices")
}

enum InvoiceStatus {
  PENDENTE_EMISSAO
  EMITIDA
  CANCELADA
}

